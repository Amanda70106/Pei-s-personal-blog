<%- include("partials/header"); -%>
    
    <% for(var i=0; i< totalPosts.length; i++){
        if(i===0) { %>
            <h1><%=totalPosts[i].title%></h1>
            <p><%=totalPosts[i].article%></p>
        <% } else { %>
            <h1><%=totalPosts[i].title%></h1>
            <p><%=totalPosts[i].article.substring(0, 100)%> ... <a href = <%= postLink[i]%> >Read More</a></p>
        <% }
    } %>



